{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules", "dist"],
  "exec": "node -r dotenv/config -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts",
  "cwd": ".",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.app.json",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "DOTENV_CONFIG_PATH": ".env"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": true
}
